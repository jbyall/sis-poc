@model SIS.Domain.Unit

@{
    ViewBag.Title = "Delete Unit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="margin-top:50px;">
    <div style="max-width:600px;margin:0 auto;">
        <div>
            <h3>Delete Unit</h3>
            <hr />
            <div class="alert alert-danger">
                <strong>Are you sure you want to delete this?</strong>
                <p>This action cannot be undone.</p>
            </div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Code)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Code)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

            </dl>
            <div class="row">
                <div class="col-md-2 col-sm-2">
                    <a href="~/Units" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span> Cancel</a>
                </div>
                <div class="col-md-4 col-sm-4 col-md-push-2 col-sm-push-2">
                    @using (Html.BeginForm())
                        {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                        }
                </div>
            </div>
        </div>
    </div>
</div>

