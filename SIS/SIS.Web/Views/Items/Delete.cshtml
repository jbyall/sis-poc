@model SIS.Domain.Item

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container view-container">
    <h2>Delete Item</h2>
    <div class="alert alert-danger">
        <strong>Are you sure you want to delete this?</strong>
        <p>This action cannot be undone.</p>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Item Details</div>
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Unit)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Unit)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ReorderPoint)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ReorderPoint)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Comment)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Comment)
                </dd>

            </dl>
            <div class="row">
                <div class="col-md-2 col-sm-2">
                    <a href="/Items/Details/@Model.Id" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span> Cancel</a>
                </div>
                <div class="col-md-4 col-sm-4 col-md-push-2 col-sm-push-2">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
