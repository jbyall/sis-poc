        <div class="container view-container">
            <h2>Edit Item</h2>
            <div class="panel panel-default">
                <div class="panel-heading">Item Details</div>
                <div class="panel-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
