<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SIS</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/dx")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Supply Inventory System (SIS)", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse navbar-right navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/Items/HandoutIndex" data-toggle="tooltip" title="Hand out items.">Hand Out</a></li>
                    <li><a href="/Items/ReceiveIndex" data-toggle="tooltip" title="Log in items received.">Receive</a></li>
                    <li><a href="/Inventory/Maintenance" data-toggle="tooltip" title="Maintain inventory lookup tables (drop-down lists).">Maintenance</a></li>
                    <li><a href="/Transactions/Index" data-toggle="tooltip" title="View and/or delete transactions of handouts and receipts.">Transactions</a></li>
                    <li><a href="/Reports/Index" data-toggle="tooltip" title="View and/or run reports on the menu.">Reports</a></li>
                    <li><a href="/Home/Exit" data-toggle="tooltip" title="Exit the SIS application.">Exit</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dx")
    @RenderSection("scripts", required: false)
</body>
</html>
